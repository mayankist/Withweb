<div class="container usereditpage" id="mainbox">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="card shadow border-0">
          <div class="card-body">
            <h1 class="text-center">Edit Profile</h1>
            <p>
              <small class="text-muted">Fields marked * are required.</small>
            </p>
            <form class="needs-validation" action="/user/<%= user._id %>?_method=PUT" method="POST" novalidate>
              <div class="form-group">
                <label for="">Full Name*</label>
                <input type="text" name="user[name]" class="form-control" id="Name" value="<%= user.name %>" required>
                <div class="invalid-feedback">
                  You must enter a name.
                </div>
              </div>
              <div class="form-group">
                <label for="">Username*</label>
                <input type="text" name="user[username]" class="form-control" id="Username" value="<%= user.username %>" disabled>
              </div>
              <button type="submit" class="btn btn-danger btn-block">Submit</button>
              <button type="reset" class="btn btn-secondary btn-block">Reset</button>
            </form>
            <br>
            <a href="/user/<%= user._id %>">
              <button class="btn btn-secondary">Back <i class="fa fa-arrow-left"></i></button>
            </a>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>

